<!DOCTYPE html>
<html lang="en">

<%- include("../layouts/header")%>

<body>
<header class="main-header">
    <%- include("../layouts/navigation")%>
</header>

<main>
    <form class="product-form" action="/admin/<% if (edit) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<% if (edit) { %><%= product.title %><% } %>">
        </div>
        <div class="form-control">
            <label for="imgUrl">Image URL</label>
            <input type="text" name="imgUrl" id="imgUrl" value="<% if (edit) { %><%= product.imgUrl %><% } %>">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="<% if (edit) { %><%= product.price %><% } %>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5"><% if (edit) { %><%= product.description %><% } %></textarea>
        </div>
        <% if (edit) { %>
            <input type="hidden" value="<%= product.id %>" name="productId">
        <% } %>

        <button class="btn" type="submit"><% if (edit) { %>Update Product<% } else { %>Add Product<% } %></button>
    </form>
</main>
</body>
</html>